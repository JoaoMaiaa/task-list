<%- include('../layouts/header', { title: 'Cadastrando uma tarefa' })%>
<%- include('../layouts/menu')%>
<body class="has-background-black">
    <div class="is-flex is-justify-content-center">
        <form method="post" action="/tasks/create-task">
        <div>
            <div class="field">
                <label class="label">Nome da tarefa</label>
                <div class="control has-icons-left has-icons-right">
                  <input name="task[name]" class="input has-background-grey-lighter" type="text">
                <span class="icon is-small is-left">
                    <i class="fa fa-tasks" aria-hidden="true"></i>
                </span>
                </div>
            </div>
              
            <div class="field">
                <label class="label">Descrição</label>
                <div class="control">
                    <textarea name="description[name]" class="has-background-grey-lighter textarea"></textarea>
                </div>
            </div>
              
            <div class="field is-grouped is-flex is-justify-content-end">
                <div class="control">
                    <button class="button is-success is-outlined mr-4">Cadastrar tarefa</button>
                </div>
                <div class="control">
                    <button class="button is-danger">Cancelar</button>
                </div>
            </div>
        </div>
    </form>
    </div>
<%- include('../layouts/footer')%>
<%- include('../layouts/header', { title: 'Cadastrando uma tarefa' })%>
<%- include('../layouts/menu')%>
<body class="has-background-black">
    <div class="is-flex is-justify-content-center">
        <form method="post" action="/tasks/<%= taskId %>/create-task">
            <div>
                <div class="field">
                    <label class="label">Nome da tarefa</label>
                    <div class="control has-icons-left has-icons-right">
                    <input name="task[name]" class="input has-background-grey-lighter" type="text">
                    <span class="icon is-small is-left">
                        <i class="fa fa-tasks" aria-hidden="true"></i>
                    </span>
                    </div>
                </div>
                
                <div class="field">
                    <label class="label">Descrição</label>
                    <div class="control">
                        <textarea name="description[description]" class="has-background-grey-lighter textarea"></textarea>
                    </div>
                </div>
                
                <div class="field is-grouped is-flex is-justify-content-end">
                    <div class="control">
                        <button class="button is-success is-outlined mr-4">Cadastrar tarefa</button>
                    </div>
                    <div class="control">
                        <a href="/persons/<%= taskId %>/show" class="button is-danger">Cancelar</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
<%- include('../layouts/footer')%>